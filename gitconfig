[include]
	path = .gitconfig.local
[color]
	ui = auto
[alias]
	ap = add -p
	au = add -u
	br = branch
	ci = commit
	cia = commit --amend
	ciaa = commit --amend --no-edit
	cip = commit --patch
	co = checkout
	com = checkout origin/master -B master
	cp = cherry-pick
	dc = diff --color-words --cached
	df = diff --color-words
	fe = fetch --prune
	l = log --graph --decorate --all
	ol = log --pretty=oneline
	pr  = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
	pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
	pt = push -u origin
	r = rebase
	ra = rebase --abort
	rc = rebase --continue
	ri = rebase --interactive --autosquash
	ro = rebase --onto
	rom = rebase origin/master
	rs = rebase --skip
	s = stash
	sha = "!f() { git rev-parse --default HEAD $* |tee /dev/tty |tr -d '\n' |pbcopy; }; f"
	sk = stash --keep-index
	sp = stash pop
	st = status -sb
	su = submodule update --init
	x = !gitx
	ss = show stash
	ma = merge --abort
	pushu = push --set-upstream origin HEAD
	cpa = cherry-pick --abort
[core]
	excludesfile = ~/.gitignore
	editor = mvim -f
[push]
	default = upstream
[merge]
	ff = false
[branch]
	autosetuprebase = always
	autosetupmerge = true
[advice]
	pushNonFastForward = false
	statusHints = false
	commitBeforeMerge = false
	resolveConflict = false
	detachedHead = false
[rerere]
	enabled = true
[diff]
	algorithm = minimal
	renames = true
[rebase]
	autosquash = true
[help]
	autocorrect = 1
[interactive]
	singlekey = true
