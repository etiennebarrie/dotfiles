#!/usr/bin/env -S ruby --disable-all

def default_owner
  %w[pathname yaml].each { require _1 }
  config_home = Pathname ENV.fetch "XDG_CONFIG_HOME", ENV["HOME"] + "/.config"
  config = YAML.load_file config_home.join "gh/hosts.yml"
  config&.dig "github.com", "user"
rescue SystemCallError
end

def usage
  owner_usage = default_owner ? "[owner=#{default_owner}/]" : "owner/"
  warn "usage: #{File.basename $0} [https://github.com/]#{owner_usage}repo"
  exit false
end

usage if ARGV.size != 1

owner, name, *rest = ARGV.first.delete_prefix("https://github.com/").split("/", 3)
owner, name = default_owner, owner unless name

usage unless rest.empty?
repo = "https://github.com/#{owner}/#{name}.git"
path = "#{ENV["HOME"]}/src/github.com/#{owner}/#{name}"

system "git", "clone", repo, path or exit $?.exitstatus unless File.exist?(path)
# make sure origin/HEAD is main locally
system "git", "-C", path, "branch", "--move", "main" or exit $?.exitstatus
puts "cd '#{path}'"
